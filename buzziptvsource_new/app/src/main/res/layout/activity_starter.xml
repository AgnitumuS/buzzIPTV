<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_starter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redorange.motutv1.starterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/layout_livetv_search"
        android:background="@drawable/bg04"
        android:id="@+id/rly_btnback">

        <Button
            android:text="Serial Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sn"
            style="@android:style/Widget.Button.Inset"
            android:background="@drawable/snbg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:textColor="@color/pale_white"
            android:onClick="onClick (starterActivity)"/>

        <Button
            android:text="Exit"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:id="@+id/btn_quit"
            style="@android:style/Widget.Button"
            android:background="@drawable/btn_exit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:textColor="@color/white"
            android:onClick="onClick (starterActivity)" />

        <Button
            android:text="Retry"
            android:id="@+id/btn_retry"
            android:background="@drawable/btn_retry"
            style="@android:style/Widget.Button"
            android:layout_height="35dp"
            android:layout_width="135dp"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_quit"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120dp"
            android:textColor="@color/white"
            android:onClick="onClick (starterActivity)" />

    </RelativeLayout>




</RelativeLayout>

